# Nebius GPT-OSS-Safeguard-120B Purple Agent Dockerfile
# Multi-architecture support: linux/amd64, linux/arm64
FROM python:3.11-slim

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy only runtime files (no tests, docs, scripts, results)
COPY pyproject.toml .
COPY README.md .
COPY src/ src/
COPY data/ data/

# Install package with A2A and LLM dependencies
RUN pip install --no-cache-dir -e ".[a2a,llm]"

# Expose default port
EXPOSE 8002

# Entry point: gpt-oss-sg-120b defined in pyproject.toml
# Expects: --host <host> --port <port> --card-url <url>
# Requires: NEBIUS_API_KEY environment variable
ENTRYPOINT ["gpt-oss-sg-120b"]
CMD ["--host", "0.0.0.0", "--port", "8002"]
